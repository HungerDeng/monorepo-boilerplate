{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "header-max-length": [0],
    "type-enum": [
      2,
      "always",
      [
        "wip",
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "todo"
      ]
    ],
    "body-max-line-length": [0]
  }
}
